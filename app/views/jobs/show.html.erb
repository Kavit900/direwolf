<p id="notice"><%= notice %></p>

<p>
  <strong>Id:</strong>
  <%= @job.id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @job.title %><br>
  <strong>Deadline: </strong>
  <%= @job.deadline %><br>
  <strong>Details: </strong>
  <%= @job.description %><br>
</p>

<% if (!(session[:user_id].nil?) && session[:user_role] == "USR") then %>
<%= link_to 'Apply', new_apply_path('job_id' => @job.id), class: "btn btn-success" %>
<% end %>

