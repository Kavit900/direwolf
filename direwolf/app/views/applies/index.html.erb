<h1>Listing applications</h1>

<table>
  <thead>
    <tr>
      <th>Coverletter</th>
      <td>Applicant</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applies.each do |apply| %>
      <tr>
        <td><%= apply.cover %></td>
        <td><%= apply.user.name %></td>
        <td><%= apply.user.phone %></td>
        <td><%= apply.user.email %></td>
        <td><%= link_to 'Show', apply %></td>
        <td><%= link_to 'Edit', edit_apply_path(apply) %></td>
        <td><%= link_to 'Destroy', apply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

