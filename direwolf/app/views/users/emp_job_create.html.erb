<h3>Create a New Job</h3>

<div class="JobCreate">
   <%= form_tag(:action => 'emp_job_creates') do %>
   <table>
   	 <tr>
   	 	 <td><%= label_tag(:title) %></td>
   	 	 <td><%= text_field_tag(:title) %></td>
   	 </tr>
   	 <tr>
   	 	<td><%= label_tag(:deadline) %></td>
   	 	<td><%= password_field_tag(:deadline) %></td>
   	 </tr>
   	 <tr>
   	 	 <td>&nbsp;</td>
   	 	 <td><%= submit_tag("Create Job") %></td>
   	  </tr>
   	</table>
    <% end %>
 </div>